{
  "version": "0.0.1",
  "applications": {
    "gecko": {
      "id": "info@blockxlabs.com",
      "strict_min_version": "48.0"
    }
  },
  "background": {
    "page": "background.html"
  },
  "name": "FUSOTAO",
  "manifest_version": 2,
  "description": "FUSOTAO is a wallet for polkadot",
  "browser_action": {
    "default_icon": "img/icon-32.png",
    "default_title": "FUSOTAO",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-32.png",
    "128": "img/icon-128.png"
  },
  "permissions": [
    "notifications",
    "storage",
    "tabs",
    "management",
    "activeTab",
    "https://*/*",
    "http://*/*",
    "wss://*/*",
    "ws://*/*"
  ],
  "content_security_policy": "script-src 'self' blob: 'unsafe-eval' 'wasm-eval'; img-src * data:; object-src 'self';"
}
